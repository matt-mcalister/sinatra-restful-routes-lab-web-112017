<body>
    <h1>EDIT RECIPE ENTRY</h1>
    <h2>Current Name: <%= @recipe.name %></h1>
    <h2>Current Ingredients: <%= @recipe.ingredients%></h2>
    <h2>Current Cooking Time: <%= @recipe.cook_time%></h2>
    <form method="post" action="/recipes">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <input id="hidden" type="hidden" name="id" value="<%=@recipe.id%>">
      <input type="text" name="name" placeholder="name">
      <input type="text" name="ingredients" placeholder="ingredients">
      <input type="text" name="cook_time" placeholder="cook time">
      <input type="submit" value="submit">
    </form>
</body>
